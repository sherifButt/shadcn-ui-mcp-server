  },
  "homepage": "https://github.com/sherifbutt/shadcn-ui-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/sherifbutt/shadcn-ui-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
