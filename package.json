{
  "name": "@sherifbutt/shadcn-ui-mcp-server",
  "version": "1.0.3",
  "description": "MCP server for shadcn/ui components with source code access, demos, and blocks support",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "shadcn-ui-mcp-server": "./dist/index.js"
  },
  "files": [
